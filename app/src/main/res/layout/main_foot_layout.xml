<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_foot_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_60dp"
    android:background="@color/color_eeeeee"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">

    <Button
        android:id="@+id/main_type_first"
        android:layout_width="30dp"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dimen_3dp"
        android:gravity="center"
        android:onClick="bottomClick"
        android:background="@drawable/main_tap_first_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/main_type_mall"  />


    <Button
        android:id="@+id/main_type_mall"
        android:layout_width="30dp"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dimen_3dp"
        android:background="@drawable/main_tap_record_default"
        android:gravity="center"
        android:onClick="bottomClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toRightOf="@id/main_type_first"
        app:layout_constraintRight_toRightOf="@+id/main_type_my" />

    <Button
        android:id="@+id/main_type_my"
        android:layout_width="30dp"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dimen_3dp"
        android:gravity="center"
        android:onClick="bottomClick"
        android:background="@drawable/main_tap_my_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toRightOf="@id/main_type_mall"
        app:layout_constraintRight_toRightOf="parent"  />

</android.support.constraint.ConstraintLayout>