<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center_vertical"
    android:background="@drawable/ripplestate">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ddd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/address_label"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:gravity="center"
        android:ellipsize="end"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/color_333333"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text = "默认"
        />

    <TextView
        android:id="@+id/receive_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/color_333333"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/address_label"
        app:layout_constraintTop_toTopOf="parent"
        tools:text = "name"
        />

    <TextView
        android:id="@+id/receive_phone"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:text=""
        android:textColor="@color/color_999999"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/receive_name"
        app:layout_constraintTop_toTopOf="@+id/receive_name"
        tools:text = "1231313131"
        />

    <TextView
        android:id="@+id/receive_address"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/color_999999"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/receive_name"
        app:layout_constraintTop_toBottomOf="@+id/receive_name"
        tools:text = "这里是详细的地址"
        />

    <TextView
        android:id="@+id/edit_address"
        android:layout_width="@dimen/dimen_60dp"
        android:layout_height="@dimen/dimen_30dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:background="@drawable/button_gray_stroke_bg"
        android:textColor="@color/color_575757"
        android:text="未上传"
        android:gravity="center"
        android:visibility="visible"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/video_name" />
</android.support.constraint.ConstraintLayout>