<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_gravity="center_vertical"
    android:background="@drawable/ripplestate">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ddd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_devicename_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:lines="1"
        android:text=""
        android:textColor="@color/color_575757"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_deviceaddress_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/color_575757"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_devicename_id"
        app:layout_constraintLeft_toLeftOf="@+id/tv_devicename_id" />

    <TextView
        android:id="@+id/tv_device_connectstatus_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/bluetooth_wifi_connected_text"
        android:layout_marginRight="@dimen/dimen_30dp"
        android:textColor="@color/color_575757"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_right"/>

    <ImageButton
        android:id="@+id/iv_right"
        android:layout_width="@dimen/dimen_20dp"
        android:layout_height="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_gravity="center_vertical"
        android:background="@null"
        android:src="@drawable/icon_white_right_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</android.support.constraint.ConstraintLayout>