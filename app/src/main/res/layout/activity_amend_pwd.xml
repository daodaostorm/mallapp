<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ran.mall.ui.setting.AmendPwdActivity">

    <TextView
        android:id="@+id/tv_oldPwd"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="旧密码"
        android:paddingBottom="@dimen/dimen_15dp"
        android:paddingTop="@dimen/dimen_15dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/et_oldPwd"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_oldPwd"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:hint="请输入旧密码"
        android:inputType="textPassword"
        android:padding="@dimen/dimen_10dp"
        android:maxLength="18"
        android:textColor="#333333"
        android:textSize="@dimen/dimen_14sp"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintLeft_toRightOf="@+id/tv_oldPwd"
        app:layout_constraintRight_toLeftOf="@+id/iv_oldPwd"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_oldPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close"
        android:visibility="invisible"
        android:padding="@dimen/dimen_5dp"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintLeft_toRightOf="@+id/et_oldPwd"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/divider"
        style="@style/divider_horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_oldPwd" />

    <TextView
        android:id="@+id/tv_newPwd"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="新密码"
        android:paddingBottom="@dimen/dimen_15dp"
        android:paddingTop="@dimen/dimen_15dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/divider1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/et_oldPwd"
        app:layout_constraintTop_toTopOf="@+id/divider" />

    <EditText
        android:id="@+id/et_newPwd"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:hint="字母或数字，不小于6位"
        android:inputType="textPassword"
        android:maxLength="18"
        android:textColor="#333333"
        android:textSize="@dimen/dimen_14sp"
        android:padding="@dimen/dimen_10dp"
        app:layout_constraintBottom_toTopOf="@+id/divider1"
        app:layout_constraintLeft_toRightOf="@+id/tv_newPwd"
        app:layout_constraintRight_toLeftOf="@+id/iv_newPwd"
        app:layout_constraintTop_toTopOf="@+id/divider" />

    <ImageView
        android:id="@+id/iv_newPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close"
        android:visibility="invisible"
        android:padding="@dimen/dimen_5dp"
        app:layout_constraintBottom_toTopOf="@+id/divider1"
        app:layout_constraintLeft_toRightOf="@+id/et_newPwd"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/divider" />

    <View
        android:id="@+id/divider1"
        style="@style/divider_horizontal"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_newPwd" />


    <TextView
        android:id="@+id/tv_affirmnewPwd"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="确认密码"
        android:paddingBottom="@dimen/dimen_15dp"
        android:paddingTop="@dimen/dimen_15dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/divider2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/et_oldPwd"
        app:layout_constraintTop_toTopOf="@+id/divider1" />

    <EditText
        android:id="@+id/et_affirmnewPwd"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:hint="再次输入新密码"
        android:inputType="textPassword"
        android:maxLength="18"
        android:textColor="#333333"
        android:textSize="@dimen/dimen_14sp"
        android:padding="@dimen/dimen_10dp"
        app:layout_constraintBottom_toTopOf="@+id/divider2"
        app:layout_constraintLeft_toRightOf="@+id/tv_affirmnewPwd"
        app:layout_constraintRight_toLeftOf="@+id/iv_affirmnewPwd"
        app:layout_constraintTop_toTopOf="@+id/divider1" />

    <ImageView
        android:id="@+id/iv_affirmnewPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close"
        android:visibility="invisible"
        android:padding="@dimen/dimen_5dp"
        app:layout_constraintBottom_toTopOf="@+id/divider2"
        app:layout_constraintLeft_toRightOf="@+id/et_affirmnewPwd"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/divider1" />

    <View
        android:id="@+id/divider2"
        style="@style/divider_horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_affirmnewPwd" />

    <Button
        android:id="@+id/sumbit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/dimen_25"
        android:layout_marginRight="@dimen/dimen_25"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_bg_orange"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2" />
</android.support.constraint.ConstraintLayout>
