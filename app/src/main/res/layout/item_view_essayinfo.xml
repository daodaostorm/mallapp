<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="@color/white">

    <View
        android:id="@+id/top_item_view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ddd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/main_pic_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_item_view"
        />

    <TextView
        android:id="@+id/main_title_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/dimen_15dp"
        android:gravity="center_vertical"
        android:ellipsize="end"
        android:text="Title"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/main_pic_id"/>

    <TextView
        android:id="@+id/main_detail_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/dimen_15dp"
        android:ellipsize="end"
        android:text="车牌"
        android:textColor="@color/color_999999"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/main_title_id"/>

    <ImageView
        android:id="@+id/main_read_image"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:src="@drawable/show_view"
        android:gravity="center_vertical"
        app:layout_constraintRight_toLeftOf="@+id/main_read_id"
        app:layout_constraintTop_toTopOf="@+id/main_dianzan_id"/>

    <TextView
        android:id="@+id/main_read_id"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_marginRight="@dimen/dimen_40dp"
        android:gravity="center_vertical"
        android:text="10万"
        android:textColor="@color/color_999999"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="@+id/main_dianzan_image"
        app:layout_constraintTop_toTopOf="@+id/main_dianzan_id"/>

    <ImageView
        android:id="@+id/main_dianzan_image"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:src="@drawable/show_praise"
        android:gravity="center_vertical"
        app:layout_constraintRight_toLeftOf="@+id/main_dianzan_id"
        app:layout_constraintTop_toTopOf="@+id/main_dianzan_id"/>

    <TextView
        android:id="@+id/main_dianzan_id"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_30dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:gravity="center_vertical"
        android:text="1024"
        android:textColor="@color/color_999999"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_detail_id"/>


</android.support.constraint.ConstraintLayout>