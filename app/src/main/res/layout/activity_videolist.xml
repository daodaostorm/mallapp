<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.ran.mall.ui.bluetooth.BluetoothDevicesActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/resultlist_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/device_info_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_100dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_25"
            android:paddingRight="@dimen/dimen_25"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.ran.mall.widget.RingProgressBar
                android:id="@+id/ringProgressBar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp" />

            <LinearLayout
                android:id="@+id/device_info_detail_ll"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_100dp"
                android:background="@color/white"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dimen_25"
                android:paddingRight="@dimen/dimen_25">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="记录仪空间"
                    android:lines="1"
                    android:textColor="@color/color_999999"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/device_info_free_space"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可用"
                    android:lines="1"
                    android:textColor="@color/color_999999"
                    android:textSize="13sp"
                    />
                <TextView
                    android:id="@+id/device_info_free_video_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未上传视频数"
                    android:lines="1"
                    android:textColor="@color/color_999999"
                    android:textSize="13sp"
                    />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/divider"
            style="@style/divider_horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/device_info_ll" />

        <com.github.jdsjlzx.recyclerview.LRecyclerView
            android:id="@+id/recyclerView_Device"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/color_FFFFFF"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider" />


    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/bottom_blank"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
