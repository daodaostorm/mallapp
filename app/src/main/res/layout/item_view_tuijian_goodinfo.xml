<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dimen_200dp"
    android:layout_height="@dimen/dimen_280dp"
    android:background="@color/white">


    <View
        android:id="@+id/top_item_view"
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_detail_id">

        <ImageView
            android:id="@+id/gooditem_pic_id"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_200dp"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_item_view" />

        <TextView
            android:id="@+id/gooditem_title_id"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_25dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:gravity="center_vertical"
            android:text="1024"
            android:textColor="@color/color_4d000000"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_25dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/gooditem_price_id"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_25dp"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:gravity="center_vertical"
                android:text="1024"
                android:textColor="@color/color_F64848"
                android:textSize="14sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="@dimen/dimen_20dp"
                android:layout_height="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_12dp"
                android:scaleType="centerCrop"
                android:background="@drawable/detail_icon"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>